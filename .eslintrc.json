{
    "env": {
      "browser": true,
      "es6": true
    },
    //  To learn more about the rules: https://eslint.org/docs/rules/
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["warn", "single"],
      "indent": ["error", 4],
      "space-infix-ops": ["error", {"int32Hint": false}],
      "no-trailing-spaces": "warn",
      "no-mixed-spaces-and-tabs": "warn",
  
      "no-undef": "error",
      "no-undefined": "error",
      "no-unused-vars": "error",
      
      "no-var": "warn",
      "prefer-const": "warn"
    }
  }